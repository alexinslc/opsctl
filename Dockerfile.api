# Dockerfile for API
FROM python:3.12-slim

WORKDIR /app

# Install uv
RUN pip install uv

# Copy workspace files
COPY pyproject.toml .
COPY packages/api packages/api

# Install dependencies
RUN uv sync

# Expose port
EXPOSE 8000

# Run the API
CMD ["uv", "run", "uvicorn", "opsctl_api.main:app", "--host", "0.0.0.0", "--port", "8000"]
